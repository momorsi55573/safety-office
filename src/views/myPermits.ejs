<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    

                                <title>Permits</title> 
                             
</head>
<body>
    <div class="container pt-4">        <!--<%-allPermits%> -->
        <form action="/permit/searchPermits" class="form-inline my-2 my-lg-0 pb-3">
            <button class="btn btn-outline-success my-2 my-sm-0 mr-2" value="request" type="submit">Search</button>
            <input class="form-control"  type="search" id="datepicker" aria-describedby="emailHelp" placeholder="Date" name="term" required>
    </form>

    <%if (user.company === 'ZTPC') { %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">start Date</th>
                <th scope="col">end Date</th>
                <th scope="col">Start time</th>
                <th scope="col">Expired at</th>
                <th scope="col">Type</th>
                <th scope="col">Issued to</th>
                <th scope="col">Decription of work</th>
                <th scope="col">Area</th>
                <th scope="col">Location</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < allPermits.length; i++) { %>
                 <tr onclick="window.location='/permit/thisPermit/<%= allPermits[i].id %>'">
                    <td><%= allPermits[i].startDate %></td>
                    <td><%= allPermits[i].endDate %></td>
                    <td><%= allPermits[i].startAt %></td>
                    <td><%= allPermits[i].expiredAt %></td>
                    <td><%= allPermits[i].permitType %></td>
                    <td><%= allPermits[i].issuedTo %></td>
                    <td><%= allPermits[i].description %></td>
                    <td><%= allPermits[i].area %></td>
                    <td><%= allPermits[i].location %></td>
                    <td><%= allPermits[i].status %></td>
                </tr>
                    
                 <% } %>
           
            </tbody>
          </table>   
                   <% } %>

                   <%if (user.role === 'ENG' && user.company !== 'ZTPC') { %>
                    <table class="table">
                            
                        <thead>
                          <tr>
                            <th scope="col">start Date</th>
                            <th scope="col">end Date</th>
                            <th scope="col">Start time</th>
                            <th scope="col">Expired at</th>
                            <th scope="col">Type</th>
                            <th scope="col">Issued to</th>
                            <th scope="col">Decription of work</th>
                            <th scope="col">Area</th>
                            <th scope="col">Location</th>
                            <th scope="col">Status</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i < companyPermits.length; i++) { %>
                                <tr onclick="window.location='/permit/thisPermit/<%= companyPermits[i].id %>'">
                                    <td><%= companyPermits[i].startDate %></td>
                                    <td><%= companyPermits[i].endDate %></td>
                                    <td><%= companyPermits[i].startAt %></td>
                                    <td><%= companyPermits[i].expiredAt %></td>
                                    <td><%= companyPermits[i].permitType %></td>
                                    <td><%= companyPermits[i].issuedTo %></td>
                                    <td><%= companyPermits[i].description %></td>
                                    <td><%= companyPermits[i].area %></td>
                                    <td><%= companyPermits[i].location %></td>
                                    <td><%= companyPermits[i].status %></td>
                                </tr>
                             <% } %>
                       
                        </tbody>
                      </table> 
                    <% } %>

                    <%if (user.role === 'Officer' && user.company !== 'ZTPC') { %>
                        <table class="table">
                            
                            <thead>
                              <tr>
                                <th scope="col">start Date</th>
                                <th scope="col">end Date</th>
                                <th scope="col">Start time</th>
                                <th scope="col">Expired at</th>
                                <th scope="col">Type</th>
                                <th scope="col">Issued to</th>
                                <th scope="col">Decription of work</th>
                                <th scope="col">Area</th>
                                <th scope="col">Location</th>
                                <th scope="col">Status</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i < companyPermits.length; i++) { %>
                                    <tr onclick="window.location='/permit/thisPermit/<%= companyPermits[i].id %>'">
                                        <td><%= companyPermits[i].startDate %></td>
                                        <td><%= companyPermits[i].endDate %></td>
                                        <td><%= companyPermits[i].startAt %></td>
                                        <td><%= companyPermits[i].expiredAt %></td>
                                        <td><%= companyPermits[i].permitType %></td>
                                        <td><%= companyPermits[i].issuedTo %></td>
                                        <td><%= companyPermits[i].description %></td>
                                        <td><%= companyPermits[i].area %></td>
                                        <td><%= companyPermits[i].location %></td>
                                        <td><%= companyPermits[i].status %></td>
                                    </tr>
                                 <% } %>
                           
                            </tbody>
                          </table> 
                        <% } %>

    <!--
    <% if(user.company === 'ZTPC'){ %>
           
